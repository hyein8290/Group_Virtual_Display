<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/fragment_settingServerIpText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서버 IP"
                    android:textSize="20dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/fragment_settingServerIpEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789."
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number|numberDecimal"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/fragment_settingServerPortText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서버 Port"
                    android:textSize="20dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/fragment_settingServerPortEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number|numberDecimal"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/fragment_settingWebSocketText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="접속 상태"
                    android:textSize="20dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/fragment_settingWebSocketEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/fragment_settingSaveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장">

            </Button>
            <Button
                android:id="@+id/fragment_settingPrevButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전">

            </Button>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>